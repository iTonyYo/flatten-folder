{
  "name": "flatten-folder",
  "version": "1.0.6",
  "description": "递归扁平化指定文件夹内所有文件。",
  "files": [
    "lib/**/*.js"
  ],
  "main": "lib/flattenFolder.js",
  "scripts": {
    "build": "npx babel-node ./scripts/clean-built && cross-env NODE_ENV=production npx babel-node ./scripts/build",
    "lint": "npx eslint --cache .",
    "reprepare": "npx babel-node ./scripts/re-prepare",
    "clean": "npx babel-node ./scripts/clean",
    "license": "npx babel-node ./scripts/license",
    "test": "cross-env NODE_ENV=test npx babel-node ./scripts/test",
    "coverage": "npx nyc report --reporter=text-lcov | npx coveralls",
    "changelog": "npx auto-changelog -p",
    "prepublish": "npx snyk protect"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "author": {
    "name": "iyowei",
    "email": "swzyocowboy@icloud.com",
    "url": "https://github.com/iTonyYo"
  },
  "license": "MIT",
  "git": {
    "core.editor": "code"
  },
  "gitignore": [
    "macOS",
    "Windows",
    "Linux",
    "Node",
    "VisualStudioCode",
    "SublimeText",
    "CVS",
    "Diff",
    "Vim",
    "TortoiseGit",
    "Diff",
    "Patch"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.9.0"
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "globals": {
      "test": true,
      "suite": true,
      "run": true,
      "require": true,
      "process": true,
      "module": true,
      "setup": true,
      "suiteSetup": true,
      "suiteTeardown": true
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-use-before-define": 0
    }
  },
  "eslintIgnore": [
    "benchmark/**",
    "docs/**",
    "*-test.js",
    "esm/**",
    "lib/**",
    ".github/**",
    ".vscode/**",
    "scripts/**"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npx eslint --cache",
      "npm run test"
    ]
  },
  "mocha": {
    "extension": [
      "js"
    ],
    "timeout": 120000,
    "ui": "tdd",
    "color": true,
    "delay": true,
    "fullStackTrace": true,
    "checkLeaks": true,
    "retries": 2
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "per-file": true,
    "reporter": [
      "html"
    ],
    "report-dir": "./docs/coverage",
    "cache": false,
    "exclude": [
      "lib/**",
      "esm/**",
      "benchmark/**",
      "docs/**",
      "scripts/**",
      "**/*.test.js"
    ],
    "skip-empty": true,
    "clean": true
  },
  "auto-changelog": {
    "output": "UPDATELOG.md",
    "template": "changelog-template.hbs",
    "unreleased": true,
    "commitLimit": false,
    "includeBranch": [
      "master"
    ]
  },
  "repository": {
    "url": "git@github.com:iTonyYo/flatten-folder.git",
    "type": "git"
  },
  "homepage": "https://github.com/iTonyYo/flatten-folder",
  "bugs": "https://github.com/iTonyYo/flatten-folder/issues",
  "private": false,
  "keywords": [
    "flatdir",
    "dir",
    "folder",
    "文件夹",
    "nodejs",
    "扁平化"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "async": "^3.2.2",
    "deep-scan-dir": "^1.2.0",
    "move-file": "^1.2.0",
    "trash": "^6.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "auto-changelog": "^1.16.2",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "chai": "^4.3.4",
    "chalk": "^3.0.0",
    "coveralls": "^3.1.1",
    "cpy": "^8.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "execa": "^4.0.0",
    "fast-glob": "^3.2.7",
    "husky": "^4.2.1",
    "license-checker": "^25.0.1",
    "lint-staged": "^10.0.7",
    "listr": "^0.14.3",
    "make-dir": "^3.0.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "p-map": "^3.0.0",
    "snyk": "^1.1024.0",
    "write-file-atomic": "^3.0.1"
  }
}
